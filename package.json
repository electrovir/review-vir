{
    "name": "review-vir",
    "version": "2.0.0",
    "private": true,
    "homepage": "https://github.com/review-vir/review-vir",
    "bugs": {
        "url": "https://github.com/review-vir/review-vir/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/review-vir/review-vir.git"
    },
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "review-vir",
        "url": "https://github.com/review-vir"
    },
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "mono-vir for-each-async npm run build",
        "compile": "virmator compile",
        "format": "virmator format",
        "lint": "virmator lint fix",
        "publish": "virmator publish npm run test:all",
        "test": "mono-vir for-each-async npm run test",
        "test:all": "npm run compile && concurrently --colors --kill-others-on-fail -c auto --names tests,spelling,format,docs,deps,lint,build \"npm run test:coverage\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\" \"npm run test:deps\" \"npm run test:lint\" \"npm run build\"",
        "test:coverage": "mono-vir for-each-async npm run test:coverage",
        "test:deps": "virmator deps check",
        "test:docs": "virmator docs check",
        "test:format": "virmator format check",
        "test:lint": "virmator lint",
        "test:spelling": "virmator spellcheck",
        "test:update": "mono-vir for-each-async npm run test:update"
    },
    "dependencies": {
        "@augment-vir/common": "^30.2.0",
        "date-vir": "^6.0.1",
        "localforage-esm": "^1.10.2",
        "spa-router-vir": "^4.0.4",
        "type-fest": "^4.26.1",
        "typed-event-target": "^4.0.0",
        "vira": "^22.2.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.1.0",
        "@eslint/js": "^9.12.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@stylistic/eslint-plugin-ts": "^2.9.0",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "cspell": "^8.14.4",
        "dependency-cruiser": "^16.4.2",
        "esbuild": "^0.24.0",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsdoc": "^50.3.1",
        "eslint-plugin-monorepo-cop": "^1.0.2",
        "eslint-plugin-playwright": "^1.6.2",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-require-extensions": "^0.1.3",
        "eslint-plugin-sonarjs": "^2.0.3",
        "eslint-plugin-unicorn": "^56.0.0",
        "markdown-code-example-inserter": "^3.0.0",
        "mono-vir": "^1.0.1",
        "npm-check-updates": "^17.1.3",
        "prettier": "^3.3.3",
        "prettier-plugin-interpolated-html-tags": "^1.0.5",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.6",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-packagejson": "^2.5.3",
        "prettier-plugin-sort-json": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.1",
        "virmator": "^13.5.2"
    },
    "engines": {
        "node": ">=22"
    }
}
