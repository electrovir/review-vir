{
    "name": "@review-vir/mono-repo",
    "version": "1.0.0",
    "private": true,
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "build": "mono-vir for-each-async npm run build",
        "compile": "mono-vir for-each tsc -b -f --pretty",
        "format": "virmator format",
        "publish": "virmator publish \"npm run test:all\"",
        "start": "npm start --workspace @review-vir/review-vir",
        "test": "mono-vir for-each-async npm run test:all",
        "test:all": "npm run compile && concurrently --colors --kill-others-on-fail -c auto --names tests,spelling,format,deps \"npm run test\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:deps\"",
        "test:deps": "echo \"temporarily disabled\"",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "npm run compile"
    },
    "dependencies": {
        "@augment-vir/common": "^26.3.2",
        "date-vir": "^5.1.4",
        "localforage-esm": "^1.10.2",
        "spa-router-vir": "^4.0.1",
        "type-fest": "^4.15.0",
        "typed-event-target": "^3.3.0",
        "vira": "^22.1.1"
    },
    "devDependencies": {
        "@augment-vir/node-js": "^26.3.2",
        "cspell": "^8.7.0",
        "dependency-cruiser": "^16.3.1",
        "esbuild": "^0.20.2",
        "markdown-code-example-inserter": "^1.0.0",
        "mono-vir": "^1.0.0",
        "npm-check-updates": "~16.12.3",
        "prettier": "^3.2.5",
        "prettier-plugin-interpolated-html-tags": "^1.0.5",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-multiline-arrays": "^3.0.4",
        "prettier-plugin-organize-imports": "^3.2.4",
        "prettier-plugin-packagejson": "^2.5.0",
        "prettier-plugin-sort-json": "^4.0.0",
        "prettier-plugin-toml": "^2.0.1",
        "typescript": "5.4.5",
        "virmator": "^11.5.2"
    }
}
