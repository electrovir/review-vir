{
    "name": "@review-vir/common",
    "version": "1.0.0",
    "homepage": "https://github.com/review-vir/review-vir",
    "bugs": {
        "url": "https://github.com/review-vir/review-vir/issues"
    },
    "repository": "git+https://github.com/review-vir/review-vir.git",
    "license": "(MIT or CC0 1.0)",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "npm run docs && mkdir -p ../../dist-pages/common && cp -r ./dist-pages/* ../../dist-pages/common/",
        "compile": "tsc -b -f --pretty",
        "docs": "virmator docs",
        "start": "virmator frontend",
        "test": "virmator test-web",
        "test:all": "concurrently --colors --kill-others-on-fail -c auto --names test,docs \"npm run test:coverage\" \"npm run test:docs\"",
        "test:coverage": "npm run test coverage",
        "test:docs": "virmator docs check",
        "test:types": "npm run compile"
    },
    "dependencies": {
        "@augment-vir/common": "^28.0.2"
    },
    "devDependencies": {
        "@augment-vir/browser-testing": "^28.0.2",
        "@open-wc/testing": "^4.0.0",
        "@types/mocha": "^10.0.6",
        "@web/dev-server-esbuild": "^1.0.2",
        "@web/test-runner": "^0.18.2",
        "@web/test-runner-commands": "^0.9.0",
        "@web/test-runner-playwright": "^0.11.0",
        "@web/test-runner-visual-regression": "^0.9.0",
        "istanbul-smart-text-reporter": "^1.1.4",
        "markdown-code-example-inserter": "^1.0.0",
        "typedoc": "^0.25.13"
    },
    "publishConfig": {
        "access": "public"
    }
